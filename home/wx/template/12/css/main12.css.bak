* { 
	margin: 0;	padding: 0; border: 0; 
	font-family: 'Microsoft yahei' !important;
	-webkit-tap-highlight-color: rgba(0, 0, 0 ,0);
}

input{ border: 0; border-radius: 0 !important; -webkit-appearance: none;}
textarea{ -webkit-appearance: none; border-radius: 0 !important; }

.more_button{
	color: white;
	/*background-color: rgb(118, 209, 205);*/
	font-size: 18px;
	margin: 0 3.125% 10px;
	width: 93.75%;
	height: 40px;
	cursor: pointer;
	letter-spacing: 12px;
	text-indent: 12px;
	*text-indent: 0;
	background-color:#CECECE;
}

.more_button:hover{
	/*background-color: rgb(66, 184, 177);*/
	background-color:#CECECE;
}

/*详情页面转发朋友圈*/
.friend_wrapper {
  width: 260px;
  margin: 20px auto;
  color:#fff;
}
.friend_btn {
  display: block;
  background: #635141;
  width: 120px;
  height: 30px;
  margin-bottom: 20px;
  float: left;
  font-size: 13px;
}
.friend_btn img {
  width: 24px;
  height: 24px;
  padding-top: 3px;
  padding-left: 10px;
  vertical-align: -7px;
}
.friend_btn:hover {
  background: #493c30;
  text-decoration: none;
}
.add_btn {
  display: block;
  background: #7AD0CD;
  margin: 20px auto;
  height: 40px;
  text-align: center;
  text-decoration: none;
}
.add_btn span {
  line-height: 40px;
  color: #fff;
  font-size: 16px;
}
.add_btn:hover {
  background: #4ABFBC;
  text-decoration: none;
}
